<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a3765d"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#10000000"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:shadowColor="#52591f"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="訂單總計"
            android:textColor="#522175"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#20000000"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical|left"
            android:shadowColor="#52591f"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="送餐至:"
            android:textColor="#8002080f"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical|right"
            android:shadowColor="#52591f"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="台北市信義區市府路45號 "
            android:textColor="#02080f"
            android:textSize="22sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#30000000"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical|left"
            android:shadowColor="#52591f"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="送餐時間:"
            android:textColor="#8002080f"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical|right"
            android:shadowColor="#52591f"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="2019/04/15 00:05 - 2019/04/15 00:15 "
            android:textColor="#02080f"
            android:textSize="22sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5"
        android:background="#40000000"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:shadowColor="#52591f"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:text="*安全驗證碼:"
                    android:textColor="#8002080f"
                    android:textSize="22sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_style"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/randomVerificationCodeImageView"
                        android:layout_width="200dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="5dp"
                        android:background="#00000000"
                        android:scaleType="centerInside"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:shadowColor="#52591f"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:text="無法辨識?"
                    android:textColor="#8002080f"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left">

                    <TextView
                        android:id="@+id/refreshCodeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:shadowColor="#000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:text="重新載入"
                        android:textColor="#1d65a6"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1.5"
                android:background="@drawable/background_style2">

                <EditText
                    android:id="@+id/enterConfirmationCodeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:gravity="center_vertical|left"
                    android:hint="請輸入您看到的字元符號"
                    android:shadowColor="#52591f"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:textColor="#02080f"
                    android:textColorHint="#8002080f"
                    android:textCursorDrawable="@null"
                    android:textSize="24sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#50000000"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical|left"
                android:shadowColor="#52591f"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:text="小計:"
                android:textColor="#8002080f"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center_vertical|right"
                android:shadowColor="#52591f"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:text="NT＄299 "
                android:textColor="#02080f"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical|left"
                android:shadowColor="#52591f"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:text="外送費:"
                android:textColor="#8002080f"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center_vertical|right"
                android:shadowColor="#52591f"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:text="NT＄299 "
                android:textColor="#02080f"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical|left"
                android:shadowColor="#52591f"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:text="總計:"
                android:textColor="#8002080f"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center_vertical|right"
                android:shadowColor="#02080f"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:text="NT＄299 "
                android:textColor="#52591f"
                android:textSize="22sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#60000000"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_style"
            android:shadowColor="#a3765d"
            android:shadowDx="2"
            android:shadowDy="2"
            android:textColor="#02080f"
            android:text="結帳"
            android:textStyle="bold"
            android:textSize="22sp"/>
    </LinearLayout>
</LinearLayout>